-- Function to start orbiting
local function startOrbit()
    if not gameBall then
        Rayfield:Notify({
            Title = "Error",
            Content = "GameBall not found in workspace!",
            Duration = 3,
            Image = 4483362458
        })
        return
    end
    
    isOrbiting = true
    orbitConnection = RunService.Heartbeat:Connect(function()
        if isOrbiting and gameBall and character and humanoidRootPart then
            -- Update angle based on speed
            orbitAngle = orbitAngle + (orbitSpeed * 0.1)
            
            -- Calculate new orbit position
            local gameBallPosition = gameBall.Position
            local x = gameBallPosition.X + (orbitDistance * math.cos(orbitAngle))
            local z = gameBallPosition.Z + (orbitDistance * math.sin(orbitAngle))
            local y = gameBallPosition.Y
            
            -- Move player to new position
            humanoidRootPart.CFrame = CFrame.new(Vector3.new(x, y, z), gameBallPosition)
        end
    end)
    
    Rayfield:Notify({
        Title = "Orbit Started",
        Content = "Now orbiting around GameBall!",
        Duration = 2,
        Image = 4483362458
    })
end

-- Function to stop orbiting
local function stopOrbit()
    isOrbiting = false
    if orbitConnection then
        orbitConnection:Disconnect()
        orbitConnection = nil
    end
    
    Rayfield:Notify({
        Title = "Orbit Stopped",
        Content = "Orbit system deactivated.",
        Duration = 2,
        Image = 4483362458
    })
end

