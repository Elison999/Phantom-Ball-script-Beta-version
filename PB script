-- Toggle for Auto Spam
local AutoSpamToggle = v3tab:CreateToggle({
   Name = "Auto Spam v3",
   CurrentValue = false,
   Flag = "AutoSpamToggle",
   Callback = function(Value)
      AutoSpamv3Enabled = Value
      
      if AutoSpamv3Enabled then
         -- Start the detection loop
         connection = RunService.Heartbeat:Connect(function()
            if not AutoSpamv3Enabled then
               connection:Disconnect()
               return
            end
            
            -- Check if player character exists
            if not LocalPlayer.Character or not LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
               return
            end
            
            local playerPosition = LocalPlayer.Character.HumanoidRootPart.Position
            
            -- First check: GameBall with Really Red color
            local gameBall = Workspace:FindFirstChild("GameBall")
            local ballIsRed = false
            
            if gameBall and gameBall:IsA("BasePart") then
               ballIsRed = (gameBall.BrickColor == BrickColor.new("Really red"))
            end
            
            -- Update red ball detection status
            if ballIsRed then
               redBallDetected = true
            elseif not ballIsRed and gameBall then
               redBallDetected = false -- Reset if ball exists but wrong color
            end
            
            local playerDetected = false
            
            -- Second check: Only check for players if red ball was detected first
            if redBallDetected then
               for _, player in pairs(Players:GetPlayers()) do
                  if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                     local distance = (playerPosition - player.Character.HumanoidRootPart.Position).Magnitude
                     if distance <= AutoSpamDistV3 then
                        playerDetected = true
                        break
                     end
                  end
               end
            end
            
            -- Execute only if red ball detected first, then player detected
            if redBallDetected and playerDetected then
               -- Execute the remote event twice
               for i = 1, 100 do
                  local args = {
                     [1] = 2.933813859058389e+76
                  }
                  
                  pcall(function()
                     local remoteEvent = ReplicatedStorage.TS.GeneratedNetworkRemotes:FindFirstChild("RE_4.6848415795802784e+76")
                     if remoteEvent then
                        remoteEvent:FireServer(unpack(args))
                     end
                  end)
               end
               
               wait(0.) -- Small delay to prevent spam
            end
         end)
      else
         -- Stop the detection loop and reset red ball detection
         if connection then
            connection:Disconnect()
         end
         redBallDetected = false
      end
   end,
})

-- Status section
local StatusSection = v3tab:CreateSection("Ball Distance Status")

local StatusLabel = v3tab:CreateLabel("Status: Disabled")

-- Update status label with ball distance
RunService.Heartbeat:Connect(function()
   if AutoSpamv3Enabled then
      local ballDistance = "N/A"
      local gameBall = Workspace:FindFirstChild("GameBall")
      
      if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") and gameBall and gameBall:IsA("BasePart") then
         local playerPosition = LocalPlayer.Character.HumanoidRootPart.Position
         local distance = (playerPosition - gameBall.Position).Magnitude
         ballDistance = math.floor(distance) .. " studs"
      end
      
      local ballColorStatus = "Not Found"
      if gameBall then
         if gameBall.BrickColor == BrickColor.new("Really red") then
            ballColorStatus = "Red (Active)"
         else
            ballColorStatus = "Wrong Color"
         end
      end
      
      StatusLabel:Set("Status: Active | Ball Distance: " .. ballDistance .. " | Ball: " .. ballColorStatus)
   else
      StatusLabel:Set("Status: Disabled")
   end
end)

-- Cleanup when player leaves
player.CharacterRemoving:Connect(function()
    stopOrbit()
end)

-- Update character references
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    humanoidRootPart = character:WaitForChild("HumanoidRootPart")
end)

-- Cleanup on script end
game.Players.PlayerRemoving:Connect(function(player)
    if player == LocalPlayer then
        if ESPSquare then
            ESPSquare.Destroy()
        end
        if ParryConnection then
            ParryConnection:Disconnect()
        end
        if SpamConnection then
            SpamConnection:Disconnect()
        end
        -- Cleanup advanced spam and ESPs
        if AdvancedSpamConnection then
            AdvancedSpamConnection:Disconnect()
        end
        -- NEW: Cleanup Auto Spam V2
        if AutoSpamV2Connection then
            AutoSpamV2Connection:Disconnect()
        end
        DestroyAllESP()
        StopBallESPMonitoring()
    end
end)

-- Script para detectar e deletar RemoteEvents após 0.5 segundos
-- Coloque este script em ServerScriptService

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Debris = game:GetService("Debris")

-- Função para deletar o RemoteEvent após 0.5 segundos
local function scheduleRemoteEventDeletion(remoteEvent)
    -- Aguarda 0.5 segundos e então deleta o RemoteEvent
    wait(0.000000001)
    if remoteEvent and remoteEvent.Parent then
        print("Deletando RemoteEvent:", remoteEvent.Name)
        remoteEvent:Destroy()
    end
end

-- Função para quando um novo filho é adicionado
local function onChildAdded(child)
    -- Verifica se o objeto adicionado é um RemoteEvent
    if child:IsA("RemoteEvent") then
        print("RemoteEvent detectado:", child.Name)
        
        -- Cria uma nova thread para deletar após 0.5 segundos
        spawn(function()
            scheduleRemoteEventDeletion(child)
        end)
        
        -- Alternativa usando Debris service (mais eficiente)
        -- Debris:AddItem(child, 0.00000000001)
    end
end

-- Conecta a função ao evento ChildAdded do ReplicatedStorage
ReplicatedStorage.ChildAdded:Connect(onChildAdded)

-- Também verifica RemoteEvents já existentes
for _, child in pairs(ReplicatedStorage:GetChildren()) do
    if child:IsA("RemoteEvent") then
        print("RemoteEvent existente detectado:", child.Name)
        spawn(function()
            scheduleRemoteEventDeletion(child)
        end)
    end
end

print("Script de detecção de RemoteEvent iniciado!")

-- Script Detector de Distância para GameBal

-- Configurações
local DETECTION_DISTANCE = 30
local EXECUTION_COUNT = 100
local GAMEBALL_NAME = "GameBall"
local TARGET_COLOR = BrickColor.new("Really red")

-- Variáveis de controle
local isExecuting = false
local executionCounter = 0
local connection = nil
local playerInRange = false

-- Função para executar o código específico
local function executeCode()
    local args = {
        [1] = 2.933813859058389e+76
    }
    
    local success, error = pcall(function()
        ReplicatedStorage.TS.GeneratedNetworkRemotes:FindFirstChild("RE_4.6848415795802784e+76"):FireServer(unpack(args))
    end)
    
    if not success then
        warn("Erro ao executar código: " .. tostring(error))
    end
end

-- Função para verificar se há players na área
local function checkPlayersInRange(centerPosition)
    local playersInRange = {}
    
    for _, player in pairs(Players:GetPlayers()) do
        if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local distance = (player.Character.HumanoidRootPart.Position - centerPosition).Magnitude
            if distance <= DETECTION_DISTANCE then
                table.insert(playersInRange, player)
            end
        end
    end
    
    return #playersInRange > 0, playersInRange
end

-- Função principal de monitoramento
local function startMonitoring()
    local gameBall = workspace:FindFirstChild(GAMEBALL_NAME)
    
    if not gameBall then
        warn("GameBall não encontrada no workspace!")
        return
    end
    
    print("Iniciando monitoramento da GameBall...")
    
    -- Conexão principal do RunService
    connection = RunService.Heartbeat:Connect(function()
        -- Verificar se a GameBall ainda existe
        if not gameBall or not gameBall.Parent then
            gameBall = workspace:FindFirstChild(GAMEBALL_NAME)
            if not gameBall then
                return
            end
        end
        
        -- Verificar se a cor é "Really red"
        local isRedColor = (gameBall.BrickColor == TARGET_COLOR)
        
        -- Verificar players na área
        local hasPlayers, playersFound = checkPlayersInRange(gameBall.Position)
        
        -- Lógica de ativação
        if isRedColor and hasPlayers and not isExecuting then
            -- Iniciar execução
            print("GameBall vermelha detectada com players próximos! Iniciando execução...")
            isExecuting = true
            executionCounter = 0
            playerInRange = true
            
            -- Executar código 100 vezes
            spawn(function()
                for i = 1, EXECUTION_COUNT do
                    if isExecuting then
                        executeCode()
                        executionCounter = i
                        wait(0.1) -- Pequeno delay entre execuções
                    else
                        break
                    end
                end
                
                print("Execução concluída: " .. executionCounter .. " vezes")
            end)
            
        elseif not hasPlayers and isExecuting then
            -- Parar execução se não há players na área
            print("Nenhum player na área. Parando execução...")
            isExecuting = false
            playerInRange = false
        end
        
        -- Atualizar status do player na área (para logs)
        if hasPlayers ~= playerInRange then
            playerInRange = hasPlayers
            if hasPlayers then
                print("Player(s) detectado(s) na área de 30 studs")
                for _, player in pairs(playersFound) do
                    print("- " .. player.Name)
                end
            else
                print("Nenhum player na área")
            end
        end
    end)
end

-- Função para parar o monitoramento
local function stopMonitoring()
    if connection then
        connection:Disconnect()
        connection = nil
    end
    isExecuting = false
    playerInRange = false
    print("Monitoramento parado")
end

-- Iniciar o script
startMonitoring()

-- Função para reiniciar (útil para debug)
local function restart()
    stopMonitoring()
    wait(1)
    startMonitoring()
end

-- Exportar funções (opcional, para controle externo)
return {
    start = startMonitoring,
    stop = stopMonitoring,
    restart = restart,
    isExecuting = function() return isExecuting end,
    getExecutionCount = function() return executionCounter end
}
