local AutoCurveToggle = CurveTab:CreateToggle({
    Name = "Auto Curve Ball",
    CurrentValue = false,
    Flag = "AutoCurve",
    Callback = function(Value)
        autoCurveEnabled = Value
        
        if autoCurveEnabled then
            curveConnection = RunService.Heartbeat:Connect(function()
                if not autoCurveEnabled then return end
                
                local gameBall = findGameBall()
                if not gameBall then return end
                
                -- Verifica se a bola está próxima (distância 13)
                local playerCharacter = player.Character
                if not playerCharacter or not playerCharacter:FindFirstChild("HumanoidRootPart") then
                    return
                end
                
                local ballDistance = (gameBall.Position - playerCharacter.HumanoidRootPart.Position).Magnitude
                
                -- Se a bola está próxima (distância 13) e é vermelha
                if ballDistance <= 20 and gameBall.BrickColor == BrickColor.new("Really red") then
                    -- Verifica se não há players próximos (distância 35)
                    local nearbyPlayers = findNearbyPlayers(35)
                    
                    if #nearbyPlayers == 0 then
                        -- Salva a posição atual da câmera
                        normalCFrame = Camera.CFrame
                        
                        -- Move a câmera instantaneamente
                        moveCameraInstantly()
                    end
                end
            end)
        else
            if curveConnection then
                curveConnection:Disconnect()
                curveConnection = nil
            end
        end
    end,
})

